#workspace $workspace8 output HDMI-0
#workspace $workspace9 output DVI-I-0
#workspace $workspace10 output DVI-D-0


# Auto-Start Programs

exec sh ~/dotfiles/wallpaper-script.sh 
exec sh ~/dotfiles/drop-term.sh 
exec compton --config ~/dotfiles/.comptonrc 
exec xautolock -time 10 -notify 0 -bell 0 -locker lock
exec sh ~/.local-exec.sh

for_window [instance="dropterm"] floating enable;
for_window [instance="dropterm"] move scratchpad; [instance="metask"] scratchpad show; move position 0px 0px; resize shrink height 0px; resize grow width 0px; move scratchpad
bindsym $mod+grave [instance="dropterm"] scratchpad show


# Window Parameters

for_window [class="Gimp"] floating enable, border normal
for_window [class="^.*"] border pixel 1
gaps inner 18
gaps outer 10
#smart_gaps on
#smart_borders on


#Colors
set $bg-color            #aa3355
set $inactive-bg-color   #aa3355
set $text-color          #221144
set $inactive-text-color #221144
set $urgent-bg-color     #ee5555
set $border-color        #aa3355

# window colors
#                       border              background         text                 indicator
client.focused          $border-color       $bg-color          $text-color          $urgent-bg-color 
client.unfocused        $border-color       $inactive-bg-color $inactive-text-color $border-color 
client.focused_inactive $border-color       $inactive-bg-color $inactive-text-color $border-color
client.urgent           $border-color       $urgent-bg-color   $text-color          $border-color 


# Bar Baby

bar {
	i3bar_command i3bar -t
    status_command i3blocks -c ~/dotfiles/i3/.i3blocks.conf
    position top
    mode hide
    hidden_state hide
    modifier Mod1
    tray_output none
    height 24
    font pango:System San Francisco Display 14, FontAwesome 10
    separator_symbol "▶"
    colors {
        background $bg-color
        statusline $text-color
        separator  $inactive-text-color
        #                  border               background              text
        focused_workspace  $border-color        $bg-color               $text-color
        active_workspace   $border-color        $inactive-bg-color      $inactive-text-color
        inactive_workspace $border-color        $inactive-bg-color      $inactive-text-color
        urgent_workspace   $text-color          $urgent-bg-color        $text-color
    }
}

bar {
	i3bar_command i3bar -t
    status_command i3blocks -c ~/dotfiles/i3/.i3blocksbottom.conf
    position bottom
    mode hide
    hidden_state hide
    modifier Ctrl
    tray_output none
    workspace_buttons no
    height 24
    font pango:System San Francisco Display 14, FontAwesome 10
    separator_symbol "▶"
    colors {
        background $bg-color00
        statusline $bg-color
        separator  $inactive-text-color
        #                  border               background              text
        focused_workspace  $border-color        $bg-color               $text-color
        active_workspace   $border-color        $inactive-bg-color      $inactive-text-color
        inactive_workspace $border-color        $inactive-bg-color      $inactive-text-color
        urgent_workspace   $text-color          $urgent-bg-color        $text-color
    }
}

exec dot-sync
